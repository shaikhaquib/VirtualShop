<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Transaction id : WT3042289688DWS25967"
            android:textColor="#545454"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/winner_wheel"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle_background"
                android:focusable="false"
                android:interpolator="@anim/rottaion">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:id="@+id/fth"
                        android:background="@drawable/ripple_circle_bg"
                        />

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:id="@+id/sixt"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:background="@drawable/ripple_circle_bg" />

                </LinearLayout>



                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:id="@+id/frth"
                    android:background="@drawable/ripple_circle_bg" />

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="66dp"
                    android:layout_marginTop="36dp"
                    android:gravity="center"
                    android:id="@+id/fst"
                    android:background="@drawable/ripple_circle_bg" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:id="@+id/thrd"
                        android:background="@drawable/ripple_circle_bg"
                        />

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:id="@+id/scd"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:background="@drawable/ripple_circle_bg" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-14dp"
                android:src="@drawable/ic_keyboard_arrow_left"
                android:tint="@color/colorPrimaryDark" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wuserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="wallet ballance"
                    android:textColor="#3d3b3b"
                    android:textSize="@dimen/activity_vertical_margin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="#3d3b3b"
                        android:text="Has Won amount "/>

                    <TextView
                        android:id="@+id/wamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2222222"
                        android:textSize="20dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/wuserNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="16:21 PM, 11 Apr 2018" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>