<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/fragment_title_padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textStyle="bold"
            android:textSize="@dimen/margin_16"
            android:textColor="#515365"
            android:id="@+id/stockname"
            android:text="Product Name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c5d9"
            />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Available Stock :"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/travailblestock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_textcolor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_16"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Stock Price   :"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/trstockprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:gravity="center"
                    android:textColor="@color/nav_textcolor"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="No of Stock to buy:"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/trnofstock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_textcolor"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="@drawable/border"
                    android:textSize="@dimen/margin_16"
                    android:layout_column="2"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Total Amount :"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/trtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_textcolor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_16"
                    android:layout_column="2"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/trgstText"
                    android:text="GST (18%)  :"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/trgstTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_textcolor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_16"
                    android:layout_column="2" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c5d9"
                />
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:text="Total including GST :"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/trtoatalamountgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_textcolor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_16"
                    android:layout_column="2"/>

            </TableRow>

        </TableLayout>



        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@drawable/border"
            android:text="BUY stock"
            android:textColor="@color/nav_textcolor"
            android:id="@+id/buystock"
            android:layout_gravity="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>