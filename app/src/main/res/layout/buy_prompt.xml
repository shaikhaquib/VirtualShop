<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/byclose"
            android:layout_margin="8dp"
            android:tint="@color/text_color"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_black_24dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_buy_cart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Stock Amount       =  RS"/>


            <EditText
                android:id="@+id/prdAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center"
                android:hint="Enter Amount here"
                android:inputType="number"
                android:maxLength="9"
                android:textStyle="bold" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/totalgsttext"
                android:text="Total GST (18%)   = RS"/>


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="-"
                android:gravity="center"
                android:maxLength="9"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:fontFamily="@font/sourcesanspro_regular"
                android:id="@+id/prdgst"                />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="Total GST (18%)   = "
            android:visibility="gone"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:id="@+id/prdamt"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="#000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total  Amount     =   RS "/>


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="-"
                android:gravity="center"
                android:maxLength="9"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:fontFamily="@font/sourcesanspro_regular"
                android:id="@+id/prdtotalamt"                />


        </LinearLayout>



        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"

            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="BUY NOW"
            android:layout_margin="30dp"
            android:textColor="@color/white" />


    </LinearLayout>

</android.support.v7.widget.CardView>