<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textColor="#515365"
            android:text="Transaction Detail"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c5d9"
            />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="2">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#304073"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Before Transaction"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#304073"/>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="After Transaction"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#304073"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Surcharge"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgsur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#304073"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="#6783b8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#304073" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#6783b8"
                    android:padding="@dimen/margin_16"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/dgdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#304073"
                    android:layout_column="2" />

            </TableRow>

        </TableLayout>
        <Button
            android:id="@+id/dgclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2b56f5"
            android:text="close"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.v7.widget.CardView>