<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="-1dp"
            android:layout_gravity="start"
            android:id="@+id/trstatus"
            android:src="@drawable/ic_minusl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="6.5"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/trId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 1545675304"
                        android:textColor="#304073"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:maxLength="15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 1545675304"
                        android:textColor="#6783b8"
                        android:id="@+id/trdate"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:maxLength="15"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit: Rs 300000"
                        android:textColor="#304073"
                        android:textStyle="bold"
                        android:id="@+id/tramount"
                        />

                    <TextView
                        android:id="@+id/trdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info: Rs 3000"
                        android:textColor="#6783b8"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:maxLength="15"/>


                </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:id="@+id/trmore"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>