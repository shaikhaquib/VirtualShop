<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refferimg"
        android:id="@+id/cardLottery">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/ADwinningcount"
                android:text="Winning \n 25%"
                android:gravity="center"
                android:textColor="@color/white"
                android:rotation="-50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="-45dp"
                android:background="@color/colorPrimaryDark"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ADfirstPrize"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#ff6d3a"
                            android:textSize="22sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="2dp"
                            android:textSize="10sp"
                            android:id="@+id/ADfprcount"
                            />
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Prize"
                        android:gravity="center"
                        android:textSize="@dimen/activity_vertical_margin"
                        android:textColor="@android:color/holo_orange_dark"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADsecondPrize"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="2dp"
                                android:textSize="10sp"
                                android:id="@+id/ADsprcount" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Second Prize"
                            android:gravity="left"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:textColor="@android:color/darker_gray"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADthirdPrize"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="#cd5832"
                                android:textSize="22sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="2dp"
                                android:textSize="10sp"
                                android:id="@+id/ADtprcount" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Third Prize"
                            android:gravity="end"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:textColor="#cd5832"
                            />

                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/ADentryfees"
                        android:textSize="@dimen/activity_vertical_margin"
                        android:textColor="@android:color/holo_orange_dark" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/activity_vertical_margin"
                        android:id="@+id/ADltzone"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark"
                        android:text="Zone : MUMBAI"/>


                </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="WINNER LIST"
                    android:id="@+id/ADwinnerList"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_orange_dark"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>