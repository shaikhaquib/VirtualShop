<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fragment_title_padding_10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/margin_16"
            android:text="Select Transaction Mode"
            android:textColor="#ff515365"
            android:textSize="@dimen/margin_16" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffc2c5d9" />

        <TextView
            android:id="@+id/new_FundTrans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/margin_16"
            android:text="Direct Fund Transfer"
            android:textColor="#86515365" />

        <TextView
            android:id="@+id/old_FundTrans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/margin_16"
            android:text="Manual Fund Transfer"
            android:textColor="#86515365" />
    </LinearLayout>
</android.support.v7.widget.CardView>