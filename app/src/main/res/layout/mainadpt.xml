<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productCard"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_011_online_shop_7"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_marginLeft="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/campaignName"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:id="@+id/prRate"
                        android:textSize="@dimen/product_d_size"
                        android:text="Rate : 40 %" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/product_d_size"
                        android:id="@+id/prCrate"
                        android:text="Current Rate : 40 %" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:id="@+id/prexpdate"
                        android:textSize="@dimen/product_d_size"
                        android:layout_weight="1"
                        android:text="Exp Date : 5 April 2018"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="starting Stock Price : 05"
                        android:id="@+id/expdate"
                        android:visibility="gone"
                        android:textSize="@dimen/product_d_size"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/pravblstck"
                android:text="Available Stock : 05"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/prtotlstck"
                android:textSize="12sp"
                android:text="Total Stock : 05"
                android:layout_marginTop="2dp"/>
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
            android:visibility="gone"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:id="@+id/productExtra">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="starting Stock Price : 05"
                android:id="@+id/prstrstckpr"
                android:textSize="@dimen/product_d_size"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/prstotlstckpr"
                android:textSize="@dimen/product_d_size"
                android:text="Total Stock Price : 05"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/lastpayment"
                android:visibility="gone"
                android:textSize="@dimen/product_d_size"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/nextpayment"
                android:textSize="@dimen/product_d_size"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expected Monthly Selling Rate : 05"
            android:id="@+id/expsellingrate"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature List"
            android:visibility="gone"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:id="@+id/prDesc"
            android:layout_marginTop="4dp"
            android:text="You can earn upto â‚¹ 5000 for this campaign"
            android:textColor="@android:color/tertiary_text_dark"
            />

    </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:id="@+id/learnmore"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Learn More"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_color" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:textStyle="bold|normal"
                android:textSize="@dimen/activity_vertical_margin"
                android:id="@+id/prBuy"
                android:textColor="@android:color/holo_red_dark"
                android:text="BUY"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>